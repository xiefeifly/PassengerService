<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="IMOptionButton">
        <attr name="image_sign_selected" format="reference" />
        <attr name="image_sign_none" format="reference" />
        <attr name="text_data_selected" format="string" />
        <attr name="text_data_none" format="string" />
    </declare-styleable>

    <style name="CustomRadioTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:drawableLeft">@drawable/bg_radio_check_selector</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="CustomCheckTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:drawableLeft">@drawable/bg_check_box_selector</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
    <style name="CongigCheckTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:drawableLeft">@drawable/bg_check_box_selector</item>
    </style>


    <style name="TabLayoutTextAppearance">
        <item name="android:textSize">@dimen/size_text_tab</item>
    </style>

</resources>