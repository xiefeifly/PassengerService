<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Toosl="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="faceIdVm"
            type="com.passenger.ui.FaceIdMoudel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/homebg">

        <include
            android:id="@+id/faceIdTitle"
            layout="@layout/title_layout" />

        <View
            android:layout_width="960dp"
            android:layout_height="540dp"
            android:background="#FFCFEBFD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="690dp"
            android:layout_height="350dp"
            android:layout_marginTop="100dp"
            android:background="#FFf"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="690dp"
            android:layout_height="350dp"
            android:layout_marginTop="50dp"
            android:background="#FFf"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="@string/tvMsg1"
            android:textColor="#FF1074F0"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMessage"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_marginTop="300dp"
            android:background="@mipmap/bg_btn"
            android:text="去录入"
            android:textColor="#FFf"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view2"
            android:layout_width="960dp"
            android:layout_height="15dp"
            android:background="#FFf"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.84" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一步"
            android:textColor="#FF1074F0"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.28" />

        <View
            android:id="@+id/relativeView"
            android:layout_width="@dimen/imge_size"
            android:layout_height="@dimen/imge_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.85" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgOne"
            android:layout_width="@dimen/imge_size"
            android:layout_height="@dimen/imge_size"
            android:layout_marginLeft="-480dp"
            android:background="@mipmap/checktrue"
            app:layout_constraintStart_toStartOf="@id/relativeView"
            app:layout_constraintTop_toTopOf="@id/relativeView" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="第一步 扫描身份证"
            android:textColor="@color/faceid_tvcolor_on"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/imgOne"
            app:layout_constraintStart_toStartOf="@+id/imgOne"
            app:layout_constraintTop_toTopOf="@id/imgOne" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgTwo"
            android:layout_width="@dimen/imge_size"
            android:layout_height="@dimen/imge_size"
            android:layout_marginLeft="-160dp"
            android:background="@mipmap/checkoff"
            app:layout_constraintStart_toStartOf="@id/relativeView"
            app:layout_constraintTop_toTopOf="@id/relativeView" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="证件扫描存档"
            android:textColor="@color/faceid_tvcolor_off"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/imgTwo"
            app:layout_constraintStart_toStartOf="@+id/imgTwo"
            app:layout_constraintTop_toTopOf="@id/imgTwo" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgThree"
            android:layout_width="@dimen/imge_size"
            android:layout_height="@dimen/imge_size"
            android:layout_marginLeft="160dp"
            android:background="@mipmap/checkoff"
            app:layout_constraintStart_toStartOf="@id/relativeView"
            app:layout_constraintTop_toTopOf="@id/relativeView" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="录入人脸信息"
            android:textColor="@color/faceid_tvcolor_off"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/imgThree"
            app:layout_constraintStart_toStartOf="@+id/imgThree"
            app:layout_constraintTop_toTopOf="@id/imgThree" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgFour"
            android:layout_width="@dimen/imge_size"
            android:layout_height="@dimen/imge_size"
            android:layout_marginLeft="480dp"
            android:background="@mipmap/checkoff"
            app:layout_constraintStart_toStartOf="@id/relativeView"
            app:layout_constraintTop_toTopOf="@id/relativeView" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="填写电话号码"
            android:textColor="@color/faceid_tvcolor_off"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/imgFour"
            app:layout_constraintStart_toStartOf="@+id/imgFour"
            app:layout_constraintTop_toTopOf="@id/imgFour" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTelephoneTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="请您输入电话号码"
            android:textColor="#FF1074F0"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.39" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTelephone"
            android:layout_width="420dp"
            android:layout_height="80dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/bg_btnk"
            android:hint="请输入电话号码"
            android:maxLines="1"
            android:text="@={faceIdVm.etLiveData}"
            android:textColor="#FF1074F0"
            android:textSize="35sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/tvTelephoneTitle"
            app:layout_constraintStart_toStartOf="@+id/tvTelephoneTitle"
            app:layout_constraintTop_toTopOf="@+id/tvTelephoneTitle" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTelephone"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="230dp"
            android:background="@mipmap/bg_btn"
            android:onClick="@{()->faceIdVm.faceIdSubmit()}"
            android:text="提交"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/tvTelephoneTitle"
            app:layout_constraintStart_toStartOf="@+id/tvTelephoneTitle"
            app:layout_constraintTop_toTopOf="@+id/tvTelephoneTitle" />

        <FrameLayout
            android:id="@+id/flCameraContainer"
            android:layout_width="960dp"
            android:layout_height="540dp"
            android:layout_gravity="center"
            android:rotation="0"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextureView
                android:id="@+id/tvCameraView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvIDMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="请将证件正面朝上"
                android:textColor="#f00"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="400dp"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnYes"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:background="@mipmap/bg_btn"
                    android:text="确认"
                    android:textColor="#fff"
                    android:textSize="25sp" />
            </LinearLayout>

            <!--        <com.example.faceoridcard.widget.FaceRectView-->
            <!--            android:id="@+id/fv_faceView"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="match_parent" />-->


        </FrameLayout>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageBitmap"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>